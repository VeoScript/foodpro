<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:id="@+id/frameLayout1">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:id="@+id/linearLayout1">
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:textAllCaps="false"
            android:background="@drawable/settings"
            android:id="@+id/btnSettings" />
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:textAllCaps="false"
            android:background="@drawable/about"
            android:id="@+id/btnAbout"/>
    </LinearLayout>
    

    <TextView
        android:text="FOODPRO"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#fffcfcfc"
        android:autoSizeTextType="none"
        android:textAlignment="center"
        android:textSize="50sp"
        android:layout_marginTop="100sp"
        android:id="@+id/apptitle"/>
    <TextView
        android:text="Order foods on your mobile"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#fffcfcfc"
        android:autoSizeTextType="none"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_marginTop="160sp"
        android:id="@+id/subapptitle"/>
    <TextView
        android:text="Login"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fffcfcfc"
        android:autoSizeTextType="none"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_marginTop="250sp"
        android:layout_marginLeft="50sp"
        android:id="@+id/logintxt"/>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayoutUsername">
        <TextView
            android:text="Username"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fffcfcfc"
            android:autoSizeTextType="none"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="310sp"
            android:layout_marginLeft="50sp"
            android:id="@+id/labelUsername"/>
        <EditText
            android:inputType="textPersonName"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:padding="15sp"
            android:id="@+id/txtUsername" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayoutPassword">
        <TextView
            android:text="Password"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fffcfcfc"
            android:autoSizeTextType="none"
            android:textAlignment="center"
            android:textSize="20sp"
            android:layout_marginTop="410sp"
            android:layout_marginLeft="50sp"
            android:id="@+id/labelPassword"/>
        <EditText
            android:inputType="textPassword"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:padding="15sp"
            android:id="@+id/txtPassword" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayoutButtonLogin">
        <Button
            android:text="Login"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="520sp"
            android:layout_marginRight="30dp"
            android:padding="10sp"
            android:textColor="#fff"
            android:textSize="20sp"
            android:background="@drawable/rounded_edittext"
            android:id="@+id/btnLogin"
            android:textAllCaps="false" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayoutButtonLinkCreateAccount">
        <Button
            android:text="Create Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="600sp"
            android:padding="10sp"
            android:textColor="#fff"
            android:textSize="22sp"
            android:background="@android:color/transparent"
            android:id="@+id/btnCreateAccount"
            android:textAllCaps="false" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayoutCopyright">
        <TextView
            android:text="Â©FoodPro 2020, All rights reserved. \n Developed by Veoscript"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fffcfcfc"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:layout_marginTop="750sp"
            android:id="@+id/lblcopyright"/>
    </LinearLayout>
</FrameLayout>